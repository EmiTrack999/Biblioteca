<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Usuarios Registrados</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #47a1fa, #e3f2fd);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        h1 {
            color: #007bff;
        }
        table {
            background-color: white;
        }
        th {
            background-color: #198754;
            color: white;
        }
        td {
            vertical-align: middle;
        }
        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
        }
    </style>
</head>
<body>
    <div class="container mt-5 shadow p-4 bg-white rounded">
        <h1 class="text-center mb-4">üë• Usuarios Registrados</h1>

        <% if (usuarios.length === 0) { %>
            <div class="alert alert-warning text-center">No hay usuarios registrados.</div>
        <% } else { %> 
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Correo</th>
                        <th>Contrase√±a</th>
                    </tr>
                </thead>
                <tbody>
                    <% usuarios.forEach(usuario => { %>
                        <tr>
                            <td><%= usuario.usuario %></td>
                            <td><%= usuario.contrasena %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>

        <div class="text-center mt-4">
            <a href="/administracion" class="btn btn-secondary">‚Üê Volver al Panel</a>
        </div>
    </div>
</body>
</html>
