<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Comprar Libros</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(to right, #ffecd2, #fcb69f);
      margin: 0;
      padding: 0;
    }
    .container {
      width: 90%;
      margin: 30px auto;
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    h1, h2 {
      text-align: center;
      color: #d35400;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: center;
    }
    th {
      background-color: #d35400;
      color: white;
    }
    .buy-button {
      padding: 5px 10px;
      background-color: #27ae60;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    .buy-button:hover {
      background-color: #1e8449;
    }
    form {
      margin-top: 30px;
      display: none;
      flex-direction: column;
      gap: 10px;
    }
    input {
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 5px;
      width: 100%;
    }
    button[type="submit"] {
      background-color: #2980b9;
      color: white;
      border: none;
      padding: 10px;
      border-radius: 5px;
      cursor: pointer;
    }
    button[type="submit"]:hover {
      background-color: #21618c;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Comprar Libros</h1>
    <table id="bookTable">
      <thead>
        <tr>
          <th>ID</th>
          <th>Título</th>
          <th>Autor</th>
          <th>Editorial</th>
          <th>Precio</th>
          <th>Acción</th>
        </tr>
      </thead>
      <tbody>
        <!-- Libros simulados; en producción esto vendría desde tu base de datos -->
        <tr>
          <td>1</td>
          <td>Cien Años de Soledad</td>
          <td>Gabriel García Márquez</td>
          <td>Sudamericana</td>
          <td>$250</td>
          <td><button class="buy-button" onclick="comprarLibro(this)">Comprar</button></td>
        </tr>
        <tr>
          <td>2</td>
          <td>El Principito</td>
          <td>Antoine de Saint-Exupéry</td>
          <td>Gallimard</td>
          <td>$180</td>
          <td><button class="buy-button" onclick="comprarLibro(this)">Comprar</button></td>
        </tr>
      </tbody>
    </table>

    <form id="purchaseForm" action="/comprar" method="POST">
      <h2>Detalles de la Compra</h2>
      <input type="hidden" name="libro_id" id="libro_id" />
      <label for="nombre">Nombre Completo:</label>
      <input type="text" name="nombre" required />

      <label for="correo">Correo Electrónico:</label>
      <input type="email" name="correo" required />

      <label for="direccion">Dirección de Envío:</label>
      <input type="text" name="direccion" required />

      <button type="submit">Finalizar Compra</button>
    </form>
  </div>

  <script>
    function comprarLibro(button) {
      const row = button.closest("tr");
      const libroId = row.children[0].innerText;
      document.getElementById("libro_id").value = libroId;
      document.getElementById("purchaseForm").style.display = "flex";
      window.scrollTo({ top: document.body.scrollHeight, behavior: 'smooth' });
    }
  </script>
</body>
</html>
